# Copy to .env and fill values
SECRET_KEY=replace_me_with_random
LICHESS_CLIENT_ID=
LICHESS_CLIENT_SECRET=

# Flask / Gunicorn
FLASK_ENV=production
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
GUNICORN_WORKERS=2

# Allow the app to run in non-production for local dev; entrypoint runs validation when FLASK_ENV=production
# Set FLASK_ENV=development or FLASK_DEBUG=1 locally to enable dev-friendly behavior

# Redis (used for Celery broker and optionally result backend)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
# Example broker URL when REDIS_PASSWORD is set
# CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:6379/0

# Postgres (option A: single DATABASE_URL)
# DATABASE_URL: Uncomment and set this if you prefer a single DSN (used by init_db)
# Example:
# DATABASE_URL=postgresql://postgres:postgres@postgres:5432/chesspuzzle
DATABASE_URL=

# Postgres (option B: individual env vars)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=chesspuzzle

# SQLite fallback (file path inside container volume)
DATABASE_FILE=/data/db.sqlite

# Optional encryption key for token storage (Fernet). Generate with:
# python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# DB wait helper tuning
DB_WAIT_TIMEOUT=30
DB_WAIT_INTERVAL=1.0

# Additional runtime tuning and feature flags
# LICHESS_CLIENT_ID/LICHESS_CLIENT_SECRET: Required for Lichess OAuth login flow.
# DB_WAIT_TIMEOUT/DB_WAIT_INTERVAL tune database wait helper (seconds and interval).
